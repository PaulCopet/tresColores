---
import Layout from "../layouts/Layout.astro";
import CalendarView from "../components/CalendarView";
import historiaData from "../data/historias-colombia.json";
---

<Layout title="Calendario Histórico de Colombia — Pastel Verde (centrado)">
  <main class="container mx-auto px-4 py-12">
    <section class="calendar-stage" data-reveal>
      <div class="calendar-surface">
        <CalendarView client:load historias={historiaData.historias} />
      </div>
    </section>
  </main>
</Layout>


<script is:inline>
  (function () {
    const io = new IntersectionObserver(
      (entries, obs) => {
        entries.forEach((e) => {
          if (e.isIntersecting) {
            e.target.classList.add("in");
            obs.unobserve(e.target);
          }
        });
      },
      { threshold: 0.1, rootMargin: "0px 0px -10% 0px" }
    );

    function observeReveals() {
      document.querySelectorAll("[data-reveal], .react-calendar__tile").forEach((el, i) => {
        if (el.classList.contains('react-calendar__tile')) {
          el.style.setProperty("--delay", `${Math.min(i, 24) * 18}ms`);
          el.classList.add("reveal-tile");
        }
        io.observe(el);
      });
    }

    function wireNav() {
      const nav = document.querySelector(".react-calendar__navigation");
      if (nav && !nav.dataset._wired) {
        nav.dataset._wired = "1";
        nav.addEventListener("click", () => setTimeout(observeReveals, 0));
      }
    }

    function ready() {
      observeReveals();
      wireNav();
    }

    if (document.readyState !== "loading") ready();
    else document.addEventListener("DOMContentLoaded", ready);
  })();
</script>

<style is:global>

  html { scroll-behavior: smooth; }

  body {
    background: radial-gradient(1200px 800px at 12% -15%, #e9fff6 0%, transparent 55%),
               radial-gradient(1200px 800px at 110% 10%, #eafcf4 0%, transparent 55%),
               var(--bg);
    color: var(--text);
  }

  /* ====== Escenario centrado ====== */
  .calendar-stage {
    max-width: 1200px;
    margin: 0 auto;
    padding: clamp(1rem, 2vw, 2rem);
    display: grid;
    place-items: center;
    position: relative;
    isolation: isolate;
  }

  /* capa decorativa suave */
  .calendar-stage::before {
    content: "";
    position: absolute;
    inset: -40px -24px -60px;
    background: linear-gradient(180deg, rgba(152, 236, 201, 0.22), rgba(152, 236, 201, 0.08)) padding-box,
                linear-gradient(180deg, rgba(15, 62, 47, 0.10), rgba(15, 62, 47, 0.06)) border-box;
    border: 1px solid transparent;
    border-radius: 24px;
    filter: blur(0.2px);
    box-shadow: var(--shadow);
    z-index: -1;
  }

  .calendar-surface {
    width: min(100%, 980px);
    background: linear-gradient(180deg, rgba(204, 246, 228, 0.35), rgba(204, 246, 228, 0.18)) padding-box,
                linear-gradient(180deg, rgba(73, 198, 154, 0.24), rgba(15, 62, 47, 0.12)) border-box;
    border: 1px solid transparent;
    border-radius: 1.25rem;
    padding: clamp(1rem, 2.5vw, 1.5rem);
    box-shadow: var(--shadow);
    backdrop-filter: blur(8px);
  }

  /* Aparición suave por scroll */
  [data-reveal] {
    opacity: 0;
    transform: translateY(10px) scale(0.995);
    transition: opacity 420ms ease, transform 420ms ease;
  }
  [data-reveal].in { opacity: 1; transform: none; }


  .react-calendar {
    width: 100% !important;
    max-width: 840px !important;
    margin-inline: auto;
    background: var(--card);
    border: 0;
    border-radius: 1rem;
    font-family: "Inter", system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, Noto Sans, "Helvetica Neue", Arial, "Apple Color Emoji", "Segoe UI Emoji";
    box-shadow: var(--shadow);
    overflow: hidden;
  }

  .react-calendar__navigation {
    margin-bottom: 0.25rem;
    gap: 0.375rem;
    display: grid;
    grid-template-columns: repeat(5, minmax(0, 1fr));
    align-items: center;
    padding: 0.625rem;
    background: linear-gradient(0deg, rgba(204, 246, 228, 0.28), rgba(204, 246, 228, 0.12));
  }

  .react-calendar__navigation button {
    font-size: 1.05rem;
    color: var(--accent-ink);
    transition: transform 140ms ease, background-color 180ms ease, box-shadow 180ms ease;
    border-radius: 0.75rem;
    min-width: 44px;
    background: transparent;
    padding: 0.5rem 0.6rem;
    border: 0;
  }
  .react-calendar__navigation button:enabled:hover,
  .react-calendar__navigation button:enabled:focus-visible {
    background-color: var(--accent-200);
    box-shadow: 0 6px 16px rgba(15, 62, 47, 0.08);
    outline: none;
    transform: translateY(-1px);
  }
  .react-calendar__navigation__label { font-weight: 800; letter-spacing: .2px; color: var(--accent-ink); }

  .react-calendar__month-view__weekdays {
    font-size: .9rem;
    font-weight: 700;
    text-transform: uppercase;
    color: var(--accent-ink);
    background: linear-gradient(180deg, rgba(204, 246, 228, 0.38), transparent);
  }
  .react-calendar__month-view__weekdays abbr { text-decoration: none; cursor: default; }

  .react-calendar__tile {
    padding: 1.25em .5em;
    font-size: 1rem;
    border-radius: .85rem;
    transition: background-color 160ms ease, color 160ms ease, box-shadow 160ms ease, transform 160ms ease;
    position: relative;
    outline: none;
  }

  /* Aparición progresiva de tiles */
  .react-calendar__tile.reveal-tile { opacity: 0; transform: translateY(8px) scale(.99); }
  .react-calendar__tile.in { opacity: 1; transform: none; transition-delay: var(--delay, 0ms); }

  .react-calendar__tile:enabled:hover,
  .react-calendar__tile:enabled:focus-visible {
    background-color: var(--accent-50);
    color: var(--accent-ink);
    box-shadow: 0 8px 20px rgba(24, 146, 112, 0.08);
    transform: translateY(-1px);
  }

  .react-calendar__tile--active {
    background: linear-gradient(180deg, var(--accent-200), var(--accent-400)) !important;
    color: #0b3b29 !important;
    box-shadow: 0 10px 24px rgba(24, 146, 112, 0.22);
    border: 1px solid rgba(14, 159, 110, 0.15);
  }

  .react-calendar__tile--now {
    background: #f5fffa;
    box-shadow: inset 0 0 0 2px var(--ring);
  }

  /* Celdas con eventos */
  .has-event {
    background: linear-gradient(180deg, rgba(167, 243, 208, .68), rgba(110, 231, 183, .55)) !important;
    color: #0b3b29 !important;
    font-weight: 800;
  }
  .has-event::after {
    content: "";
    position: absolute;
    bottom: .35rem;
    left: 50%;
    transform: translateX(-50%);
    width: 1.35rem;
    height: .22rem;
    background-color: rgba(12, 125, 98, .75);
    border-radius: 999px;
  }

  /* Contenedor general */
  .calendar-container { background-color: transparent; }

  /* Scrollbar pastel */
  ::-webkit-scrollbar { width: 10px; height: 10px; }
  ::-webkit-scrollbar-track { background: var(--muted); border-radius: 8px; }
  ::-webkit-scrollbar-thumb { background: var(--accent-200); border: 2px solid var(--muted); border-radius: 8px; }
  ::-webkit-scrollbar-thumb:hover { background: var(--accent-300); }

  /* Accesibilidad: menos movimiento si el usuario lo prefiere */
  @media (prefers-reduced-motion: reduce) { * { transition: none !important; animation: none !important; } }
</style>