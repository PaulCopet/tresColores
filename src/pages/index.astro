---
import Layout from "../layouts/Layout.astro";
import CalendarView from "../components/CalendarView";
import "../styles/variables.css";
---

<Layout title="Calendario Histórico de Colombia — Pastel Lila">
        <main class="container mx-auto px-4 py-10">
                <section class="calendar-wrapper" data-reveal>
                        <CalendarView client:load />
                </section>
        </main>
</Layout>

<style is:global>
        body {
                background: var(--bg);
                color: var(--text);
        }

        .calendar-wrapper {
                border-radius: 1.25rem;
                padding: 1.25rem;
                height: 100vh;
                display: flex;
                /* align-items: center; */
                margin: 0;
                justify-content: center;
        }

        .react-calendar {
                width: 100% !important;
                max-width: 100% !important;
                border: 0;
                border-radius: 1rem;
                font-family:
                        "Inter",
                        system-ui,
                        -apple-system,
                        Segoe UI,
                        Roboto,
                        Ubuntu,
                        Cantarell,
                        Noto Sans,
                        "Helvetica Neue",
                        Arial,
                        "Apple Color Emoji",
                        "Segoe UI Emoji";
                box-shadow: var(--shadow);
                overflow: hidden;
        }

        .react-calendar__navigation {
                margin-bottom: 0.25rem;
                gap: 0.375rem;
                display: grid;
                grid-template-columns: repeat(5, minmax(0, 1fr));
                align-items: center;
                padding: 0.625rem;
                height: 4rem;
        }

        .react-calendar__navigation button {
                font-size: 1.05rem;
                color: var(--accent-ink);
                border-radius: 0.75rem;
                min-width: 44px;
                background: white;
                padding: 0.5rem 0.6rem;
                border: 0;
        }

        .react-calendar__navigation button:enabled:hover,
        .react-calendar__navigation button:enabled:focus-visible {
                background-color: var(--accent);
                outline: none;
        }

        .react-calendar__navigation__label {
                font-weight: 700;
                letter-spacing: 0.2px;
        }

        .react-calendar__month-view__weekdays {
                font-size: 0.9rem;
                font-weight: 600;
                text-transform: uppercase;
                color: var(--accent-ink);
        }

        .react-calendar__month-view__weekdays abbr {
                text-decoration: none;
                cursor: default;
        }

        .react-calendar__tile {
                padding: 1.25em 0.5em;
                font-size: 1rem;
                border-radius: 0.8rem;
                position: relative;
                outline: none;
                transition:
                        opacity 0.3s ease,
                        transform 0.3s ease;
        }

        .react-calendar__tile.reveal-tile {
                opacity: 0;
                transform: translateY(8px) scale(0.99);
        }
        .react-calendar__tile.in {
                opacity: 1;
                transform: none;
                transition-delay: var(--delay, 0ms);
        }

        .react-calendar__tile:enabled:hover,
        .react-calendar__tile:enabled:focus-visible {
                background-color: #eff4ff;
                color: var(--accent-ink);
        }

        .react-calendar__tile--active {
                background: rgba(107, 107, 255, 0.726) !important;
                color: #ffffff !important;
                box-shadow: 0 10px 24px rgba(0, 0, 0, 0.144);
        }

        .react-calendar__tile--now {
                background: #f6f7ff;
                box-shadow: inset 0 0 0 2px var(--ring);
        }

        .has-event {
                background: linear-gradient(
                        180deg,
                        rgba(87, 112, 253, 0.308),
                        rgb(165, 180, 252)
                ) !important;
                color: #ffffff !important;
                font-weight: 700;
        }
        .has-event::after {
                content: "";
                position: absolute;
                bottom: 0.35rem;
                left: 50%;
                transform: translateX(-50%);
                width: 1.45rem;
                height: 0.22rem;
                background-color: rgba(36, 50, 105, 0.6);
                border-radius: 999px;
        }

        .calendar-container {
                background-color: white;
        }

        ::-webkit-scrollbar {
                width: 10px;
                height: 10px;
        }
        ::-webkit-scrollbar-track {
                background: var(--muted);
                border-radius: 8px;
        }
        ::-webkit-scrollbar-thumb {
                background: var(--accent);
                border: 2px solid var(--muted);
                border-radius: 8px;
        }
        ::-webkit-scrollbar-thumb:hover {
                background: #dde4ff;
        }

        @media (prefers-reduced-motion: reduce) {
                * {
                        transition: none !important;
                        animation: none !important;
                }
        }
</style>
